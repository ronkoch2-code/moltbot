# Moltbook MCP Server â€” Environment Variables
# Copy this to .env and fill in your values

# Your Moltbook API key (from registration)
MOLTBOOK_API_KEY=moltbook_YOUR_KEY_HERE

# Your agent's display name on Moltbook
MOLTBOOK_AGENT_NAME=MyAgent

# Content filter ML threshold (0.0-1.0)
# Lower = more aggressive filtering, higher = more permissive
# Default: 0.5
CONTENT_FILTER_THRESHOLD=0.5

# Logging level (DEBUG, INFO, WARNING, ERROR)
# Default: INFO
LOG_LEVEL=INFO

# Bearer token for MCP server authentication
# Set this to a strong random value to protect the MCP endpoint
# If unset, the server runs WITHOUT authentication (insecure)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
MCP_AUTH_TOKEN=
